<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="5dip"
            android:background="@color/black"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/afbeelding"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" >

            <Button
                android:id="@+id/mapBtn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2.5dp"
                android:layout_weight=".33"
                android:background="@drawable/button_custom"
                android:drawableTop="@drawable/ic_action_place"
                android:text="@string/onmap"
                android:textColor="@color/white"
                android:padding="5dip" />

            <Button
                android:id="@+id/navBtn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2.5dp"
                android:layout_weight=".33"
                android:background="@drawable/button_custom"
                android:drawableTop="@drawable/ic_action_direction"
                android:text="@string/nav"
                android:textColor="@color/white"
                android:padding="5dip" />

            <Button
                android:id="@+id/callBtn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".33"
                android:layout_margin="2.5dp"
                android:background="@drawable/button_custom"
                android:drawableTop="@drawable/ic_action_call_dark"
                android:text="@string/call"
                android:textColor="@color/white"
                android:padding="5dip" />
        </LinearLayout>

        <!-- Name Label -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dip"
                android:paddingTop="7dip"
                android:text="@string/titel"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/inputTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dip"
                android:paddingTop="10dip"
                android:text="@string/adres"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/inputAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:singleLine="true" />

            <TextView
                android:id="@+id/labelWebsite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dip"
                android:paddingTop="10dip"
                android:text="@string/website"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/inputWebsite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:background="?android:attr/selectableItemBackground"
                android:drawableLeft="@drawable/ic_action_website"
                android:drawablePadding="5dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="5dp" />

            <TextView
                android:id="@+id/labelPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dip"
                android:paddingTop="10dip"
                android:text="@string/phone"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/inputPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:background="?android:attr/selectableItemBackground"
                android:drawableLeft="@drawable/ic_action_call"
                android:drawablePadding="5dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dip"
                android:paddingTop="10dip"
                android:text="@string/beschrijving"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/inputInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:gravity="top"
                android:lines="4" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>